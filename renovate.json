{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly"],
  "dockerfile": {
    "enabled": true
  },
  "npm": {
    "enabled": true
  },
  "ignorePaths": ["node_modules/**", "vendor/**"],
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "enabled": true
    },
    {
      "description": "WordPress image - notify on major updates for plugin compatibility check",
      "matchDatasources": ["docker"],
      "groupName": "WordPress updates",
      "labels": ["wordpress-compatibility"],
      "automerge": false,
      "matchPackageNames": ["/^wordpress/"]
    },
    {
      "description": "Automatically merge minor updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "semanticCommits": "enabled",
  "postUpdateOptions": ["npmDedupe"],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
